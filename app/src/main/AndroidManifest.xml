<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lingdian.xiaoshengchangtan">

    <application
        android:name=".MyApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.MyPlayerService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".activity.HomePageActivity"
            android:theme="@style/toolbar_AppTheme"
            />

        <activity android:name=".activity.DetailPageActivity" />
        <activity android:name=".activity.NetEasyActivity" />

        <service android:name=".services.MusicService" />
        <service
            android:name=".services.DownLoadService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".activity.DownLoadingActivity" />
        <activity android:name=".activity.DownLoadedActivity"></activity>
    </application>

</manifest>